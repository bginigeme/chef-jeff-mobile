{
  "name": "chef-jeff-simple",
  "version": "1.0.0",
  "main": "index.ts",
  "scripts": {
    "start": "expo start",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web",
    "generate-recipes": "npx ts-node scripts/generateRecipeDatabase.ts",
    "generate-recipes-small": "npx ts-node scripts/generateRecipeDatabase.ts 100",
    "generate-recipes-large": "npx ts-node scripts/generateRecipeDatabase.ts 2000",
    "test-recipes": "npx ts-node scripts/testRecipeGeneration.ts",
    "test-recipes-large": "npx ts-node scripts/testRecipeGeneration.ts 500",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "@expo/metro-runtime": "~5.0.4",
    "@expo/ngrok": "^4.1.0",
    "@react-native-async-storage/async-storage": "^2.1.2",
    "expo": "~53.0.9",
    "expo-auth-session": "~6.1.4",
    "expo-constants": "~17.1.6",
    "expo-crypto": "~14.1.4",
    "expo-dev-client": "~5.1.8",
    "expo-splash-screen": "~0.30.8",
    "expo-status-bar": "~2.2.3",
    "expo-web-browser": "~14.1.6",
    "openai": "^5.0.1",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "react-native": "0.79.2",
    "react-native-url-polyfill": "^2.0.0",
    "react-native-web": "^0.20.0"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@babel/preset-env": "^7.20.0",
    "@babel/preset-typescript": "^7.20.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^22.15.29",
    "@types/react": "~19.0.10",
    "babel-preset-expo": "~13.0.0",
    "dotenv": "^16.5.0",
    "jest": "^29.5.0",
    "jest-expo": "~53.0.0",
    "ts-node": "^10.9.2",
    "typescript": "~5.8.3"
  },
  "jest": {
    "preset": "jest-expo",
    "transformIgnorePatterns": [
      "node_modules/(?!((jest-)?react-native|@react-native(-community)?)|expo(nent)?|@expo(nent)?/.*|@expo-google-fonts/.*|react-navigation|@react-navigation/.*|@unimodules/.*|unimodules|sentry-expo|native-base|react-native-svg)"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.ts",
      "**/__tests__/**/*.test.tsx"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/__tests__/setup.ts"
    ],
    "testEnvironment": "node",
    "transform": {
      "^.+\\.(ts|tsx)$": [
        "babel-jest",
        {
          "presets": [
            "babel-preset-expo",
            "@babel/preset-typescript"
          ]
        }
      ]
    },
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/$1"
    }
  },
  "private": true
}
